{
  "permissions": {
    "allow": [
      "Bash(node --version:*)",
      "Bash(npm:*)",
      "Bash(python:*)",
      "Bash(git:*)",
      "Read",
      "Grep",
      "Glob",
      "Edit",
      "Write",
      "Bash"
    ],
    "mode": "autonomous"
  },
  "enabledMcpjsonServers": [
    "github",
    "playwright",
    "filesystem",
    "sequential-thinking",
    "memory",
    "notion-epic-tracker"
  ],
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "skipDangerousModePermissionPrompt": true,
  "model": "sonnet"
}
